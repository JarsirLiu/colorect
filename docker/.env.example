# Docker 部署环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 后端服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# CORS 配置（生产环境建议改为具体域名）
CORS_ORIGINS=*

# 日志配置
LOG_LEVEL=INFO

# 工具配置目录
TOOLS_CONFIG_PATH=tools_config

# Nginx 配置
NGINX_PORT=80
NGINX_SSL_PORT=443
